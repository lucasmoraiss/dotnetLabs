@page
@model Person.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOMlD83qDqj9DqKk/2qDML3p3cdj9M4Wq7S/V" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        :root {
            --primary-color-light: #9b59b6; /* Roxo claro */
            --primary-color: #6f42c1; /* Roxo padrão */
            --primary-color-dark: #5a32a3; /* Roxo escuro */
        }

        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
        }

        .hero {
            background: linear-gradient(180deg, var(--primary-color-light), var(--primary-color)); /* Gradiente de roxo claro para roxo escuro */
            color: white;
            padding: 100px 0;
            text-align: center;
            flex: 1;
            transition: background 0.5s ease; /* Transição suave do fundo */
        }

            .hero h1 {
                font-size: 3.5rem;
                margin-bottom: 20px;
            }

            .hero p {
                font-size: 1.25rem;
                margin-bottom: 40px;
            }

        .btn-primary {
            background-color: white; /* Botão branco */
            color: var(--primary-color); /* Texto do botão em roxo */
            border: 2px solid var(--primary-color);
            transition: background-color 0.3s, color 0.3s; /* Adiciona transição suave */
        }

            .btn-primary:hover {
                background-color: var(--primary-color); /* Cor de fundo roxa no hover */
                color: white; /* Texto branco no hover */
            }

        .footer {
            text-align: center;
            padding: 20px 0;
            background-color: #343a40;
            color: white;
        }
    </style>
</head>
<body>

    <header class="hero">
        <div class="container">
            <h1 class="display-4">Bem-vindo à Minha Aplicação!</h1>
            <p class="lead">Aqui você pode fazer coisas incríveis.</p>
            <a class="btn btn-primary btn-lg" href="/swagger/index.html">
                <i class="fas fa-cogs"></i> Começar
            </a>
        </div>
    </header>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 Minha Aplicação. Todos os direitos reservados.</p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src=@("""https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js""")></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
